<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.user.healthsupervisor.StpFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageViewClock"
        android:layout_alignLeft="@+id/imageViewSecond"
        android:layout_alignStart="@+id/imageViewSecond"
        android:layout_marginBottom="21dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="00:00:000"
        android:textSize="24dp" />

    <ImageView
        android:id="@+id/imageViewClock"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/blankclock" />

    <ImageView
        android:id="@+id/imageViewSecond"
        android:layout_width="150dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/minutehand" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        app:srcCompat="@drawable/play" />

    <ImageView
        android:id="@+id/imageViewLap"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/imageViewClock"
        android:layout_alignRight="@+id/imageViewClock"
        android:layout_alignTop="@+id/imageViewPlay"
        app:srcCompat="@drawable/reload" />


</RelativeLayout>
